{
  "manifest_version": 2,
  "name": "Twitch Previews",
  "version": "1.0",
  "permissions": ["tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["core.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "TP16.png",
    "24": "TP24.png",
    "48": "TP48.png"
  },
  "browser_action": {
    "default_icon": "TP48.png",
    "default_popup": "popup.html",
    "default_title": "Twitch Previews"
  }
}
